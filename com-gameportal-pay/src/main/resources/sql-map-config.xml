<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMapConfig PUBLIC "-//ibatis.apache.org//DTD SQL Map Config 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-config-2.dtd">

<sqlMapConfig>
	<settings cacheModelsEnabled="true" lazyLoadingEnabled="true"
		enhancementEnabled="true" maxSessions="64" maxTransactions="20"
		maxRequests="128" useStatementNamespaces="true" />
	<!-- 用户信息配置 -->
	<sqlMap resource="ibatis/user/UserInfoSqlMap.xml" />
	<sqlMap resource="ibatis/user/AccountMoneySqlMap.xml" />
	<sqlMap resource="ibatis/user/CardPackageSqlMap.xml" />
	
	
	<!-- 支付平台配置 -->
	<sqlMap resource="ibatis/pay/PayPlatformSqlMap.xml" />
	<sqlMap resource="ibatis/pay/PayOrderSqlMap.xml" />
	<sqlMap resource="ibatis/pay/XimaFlagSqlMap.xml" />
	<sqlMap resource="ibatis/pay/ActivitySqlMap.xml" />

</sqlMapConfig>
